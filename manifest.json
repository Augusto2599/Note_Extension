{
    "manifest_version": 3,
    "name": "Note Extension",
    "version": "1.0",
    "description": "Uma extens√£o para criar e gerenciar notas.",
    "permissions": [
        "storage",
        "contextMenus",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "Assets/notes.png",
            "48": "Assets/notes.png",
            "128": "Assets/notes.png"
        }
    },
    "icons": {
        "16": "Assets/notes.png",
        "48": "Assets/notes.png",
        "128": "Assets/notes.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }
}